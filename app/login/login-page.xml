				<TextField text="{{ email }}" width="250" height="50" hint="Usuario" backgroundColor="white" style="border-radius: 40px;" />
				<TextField text="{{ password }}" width="250" height="50" secure="true" hint="ContraseÃ±a" backgroundColor="white" style="border-radius: 40px; margin-top:50px;"
				/>
				<Button tap="onSigninButtonTap" text="Entrar" color="white" width="250" height="50" backgroundColor="#023e56" style="margin-top:50px; border-radius: 40px;"/>
