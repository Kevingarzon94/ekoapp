				<TextField class="text-box-login" text="{{ password }}" width="250" height="50" secure="true" hint="ContraseÃ±a" backgroundColor="white" style="border-radius: 40px; margin-top:50px;"
					/>
				<Button tap="onSigninButtonTap" text="Entrar" color="white" width="250" height="50" backgroundColor="#004f73" style="margin-top:50px; border-radius: 40px;"/>
			</StackLayout>

		</StackLayout>
	</ScrollView>

</Page>
